{
  "name": "crokodial-crm-server",
  "version": "1.0.0",
  "description": "Crokodial CRM Server - Lead management and dialer system",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@shared": "dist/shared"
  },
  "scripts": {
    "dev:prep": "kill-port 3005 || true",
    "dev": "npm run dev:prep && ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "rimraf dist && tsc --listFiles --verbose",
    "postbuild": "cd ../client && npm run build && echo 'Build completed successfully'",
    "clean": "rm -rf dist node_modules package-lock.json && npm install && npm run build",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "ts-node src/scripts/seedData.ts",
    "seed:dispositions": "ts-node src/scripts/seedDefaultDispositions.ts",
    "seed:admin": "node dist/scripts/seed-admin.js",
    "create:indexes": "node dist/scripts/createIndexes.js",
    "migrate": "node dist/scripts/migrate.js",
    "test:groupme": "./test-groupme.sh",
    "test:groupme:oauth": "node test-groupme-oauth.js",
    "dev:debug": "LOG_LEVEL=debug npm run dev",
    "logs": "tail -f logs/*.log",
    "health": "curl -s http://localhost:3001/api/health | jq .",
    "purge:banners": "ts-node -T ./scripts/fixes/purgeBannerLines.ts",
    "migrate:counts": "ts-node -r module-alias/register src/scripts/migration/normalizeDialCounts.ts"
  },
  "keywords": [
    "crm",
    "dialer",
    "lead-management",
    "twilio"
  ],
  "author": "Crokodial CRM Team",
  "license": "ISC",
  "dependencies": {
    "@fast-csv/format": "^4.3.2",
    "@sentry-internal/tracing": "^7.120.3",
    "@sentry/integrations": "^7.120.3",
    "@sentry/node": "^7.120.3",
    "@sentry/utils": "^7.120.3",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bson": "^6.10.3",
    "bull": "^4.12.0",
    "bullmq": "^5.1.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "cron": "^4.3.0",
    "csv-parse": "^5.6.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.1",
    "googleapis": "^149.0.0",
    "gridfs-stream": "^1.1.1",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.4.24",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.5.0",
    "mongoose": "^8.0.0",
    "mongoose-field-encryption": "^6.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-gridfs-storage": "^5.0.2",
    "node-cron": "^3.0.3",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.19.0",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "yamljs": "^0.3.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/gridfs-stream": "^0.5.36",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.11",
    "@types/multer-gridfs-storage": "^4.0.4",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.10",
    "@types/yamljs": "^0.2.34",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chalk": "^5.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "open": "^10.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ]
  }
}
