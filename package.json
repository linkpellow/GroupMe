{
  "name": "crokodial-crm",
  "version": "1.0.0",
  "description": "Crokodial CRM - Professional Lead Management System",
  "private": true,
  "workspaces": [
    "dialer-app/client",
    "dialer-app/server"
  ],
  "scripts": {
    "kill-ports": "bash scripts/killPorts.sh",
    "dev": "echo \"Please run 'npm run dev:server' and 'npm run dev:client' in separate terminals.\"",
    "dev:server": "npm --workspace dialer-app/server run dev",
    "dev:client": "npm --workspace dialer-app/client run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm --prefix dialer-app/server run build",
    "build:client": "npm --prefix dialer-app/client run build",
    "build:all": "npm run build:server && npm run build:client",
    "start": "cd dialer-app/server && npm start",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd dialer-app/client && npm test",
    "test:server": "cd dialer-app/server && npm test",
    "test:e2e": "cypress run --browser chrome --headed --config baseUrl=http://localhost:5173",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd dialer-app/client && npm run lint",
    "lint:server": "cd dialer-app/server && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "npm run type-check:client && npm run type-check:server",
    "type-check:client": "cd dialer-app/client && tsc --noEmit",
    "type-check:server": "cd dialer-app/server && tsc --noEmit",
    "pre-commit": "lint-staged",
    "install:all": "npm install && cd dialer-app/client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules dialer-app/client/node_modules dialer-app/server/node_modules",
    "clean:dist": "rm -rf dialer-app/client/dist dialer-app/server/dist",
    "migrate": "cd dialer-app/server && npm run migrate",
    "seed:admin": "cd dialer-app/server && npm run seed:admin",
    "start:server": "node dialer-app/server/dist/server/src/index.js --host 0.0.0.0",
    "start:client": "vite --config dialer-app/client/vite.config.ts --port 5173",
    "ci:servers": "concurrently -k -s first -n SERVER,CLIENT \"npm run start:server\" \"npm run start:client\"",
    "ci:e2e": "start-server-and-test ci:servers http://localhost:5173 test:e2e"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.7.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "start-server-and-test": "^2.0.3",
    "wait-on": "^7.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/crokodial-crm.git"
  },
  "keywords": [
    "crm",
    "lead-management",
    "sales",
    "dialer",
    "react",
    "typescript",
    "mongodb"
  ],
  "author": "Crokodial CRM Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@sentry/node": "^9.24.0",
    "bcryptjs": "^3.0.2",
    "csv-parse": "^5.6.0",
    "module-alias": "^2.2.3",
    "react-icons": "^5.5.0",
    "zod": "^3.25.42"
  }
}
