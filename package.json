{
  "name": "crokodial-crm",
  "version": "1.0.0",
  "description": "Crokodial CRM - Professional Lead Management System",
  "private": true,
  "workspaces": [
    "dialer-app/shared",
    "dialer-app/client",
    "dialer-app/server"
  ],
  "scripts": {
    "dev": "echo 'Run \"npm run dev:server\" and \"npm run dev:client\" in separate terminals.'",
    "dev:server": "npm --workspace dialer-app/server run dev",
    "dev:client": "npm --workspace dialer-app/client run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "npm --workspace dialer-app/shared run build",
    "build:server": "npm --workspace dialer-app/server run build",
    "build:client": "npm --workspace dialer-app/client run build",
    "start": "npm run start:server",
    "start:server": "node dialer-app/server/dist/server/src/index.js",
    "start:client": "npm --workspace dialer-app/client run start",
    "clean": "rm -rf node_modules package-lock.json dialer-app/*/node_modules dialer-app/*/package-lock.json && npm install",
    "kill-ports": "kill-port 3005 5173 || true",
    "reset": "npm run kill-ports && npm run clean",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd dialer-app/client && npm test",
    "test:server": "cd dialer-app/server && npm test",
    "test:e2e": "cypress run --browser chrome --headed --config baseUrl=http://localhost:5173",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd dialer-app/client && npm run lint",
    "lint:server": "cd dialer-app/server && npm run lint",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "lint:fix:client": "cd dialer-app/client && npm run lint:fix",
    "lint:fix:server": "cd dialer-app/server && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "npm run type-check:client && npm run type-check:server",
    "type-check:client": "cd dialer-app/client && tsc --noEmit",
    "type-check:server": "cd dialer-app/server && tsc --noEmit",
    "pre-commit": "lint-staged",
    "install:all": "npm install && cd dialer-app/client && npm install && cd ../server && npm install",
    "clean:dist": "rm -rf dialer-app/client/dist dialer-app/server/dist",
    "migrate": "cd dialer-app/server && npm run migrate",
    "seed:admin": "cd dialer-app/server && npm run seed:admin",
    "reset:admin-password": "tsx dialer-app/server/src/scripts/update-admin-password.ts",
    "ci:servers": "concurrently -k -s first -n SERVER,CLIENT \"npm run start:server\" \"npm run start:client\"",
    "ci:e2e": "start-server-and-test ci:servers http://localhost:5173 test:e2e",
    "postbuild": "echo '=== SERVER BUILD OUTPUT DIAGNOSIS ===' && echo 'Checking dialer-app/server/dist/:' && ls -la dialer-app/server/dist/ 2>/dev/null || echo 'dist/ directory not found' && echo 'Checking for index.js:' && ls -la dialer-app/server/dist/server/src/index.js 2>/dev/null || echo 'index.js not found' && echo '=== END DIAGNOSIS ==='",
    "heroku-postbuild": "npm run build",
    "test:groupme": "npx jest test/test-groupme-oauth.test.js",
    "gen:map": "mkdir -p docs && npx -p node@20 -p dependency-cruiser@15 depcruise src --output-type dot --no-config | npx @aduh95/viz.js-cli --svg > docs/dependency-graph.svg",
    "gen:docs": "typedoc --entryPoints src --out docs/site"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/crokodial-crm.git"
  },
  "keywords": [
    "crm",
    "lead-management",
    "sales",
    "dialer",
    "react",
    "typescript",
    "mongodb"
  ],
  "author": "Crokodial CRM Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dependency-cruiser": "^15.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "graphviz-cli": "^2.0.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "nock": "^13.4.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.8.3",
    "glob": "^10.3.10",
    "@types/glob": "^8.1.0"
  },
  "dependencies": {
    "@sentry-internal/tracing": "^7.120.3",
    "@sentry/integrations": "^7.120.3",
    "@sentry/utils": "^8.55.0",
    "axios": "^1.6.0",
    "rollup": "3.29.4",
    "es-errors": "^1.3.0",
    "source-map-support": "^0.5.21"
  }
}